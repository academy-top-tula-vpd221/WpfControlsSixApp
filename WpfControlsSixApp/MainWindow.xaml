    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" FontSize="20">
            <MenuItem Header="File">
                <MenuItem Header="New">
                    <MenuItem.Icon>
                        <Image Source="/new.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Open">
                    <MenuItem.Icon>
                        <Image Source="/open.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save">
                    <MenuItem.Icon>
                        <Image Source="/save.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Clipboard">
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Cut"/>
                    <MenuItem Header="Paste"/>
                </MenuItem>
            </MenuItem>
        </Menu>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Height="30">
                <Button>
                    <Image Source="/new.png"/>
                </Button>
                <Button>
                    <Image Source="/open.png"/>
                </Button>
                <Button>
                    <Image Source="/save.png"/>
                </Button>
            </ToolBar>
            <ToolBar Height="30">
                <Button>
                    <Image Source="/new.png"/>
                </Button>
                <Button>
                    <Image Source="/open.png"/>
                </Button>
                <Button>
                    <Image Source="/save.png"/>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <StatusBar DockPanel.Dock="Bottom" Height="30">
            
        </StatusBar>
        
        <Button Height="100"
                Width="300"
                DockPanel.Dock="Bottom"
                BorderThickness="10"
                BorderBrush="Red">
            
        </Button>

        <Border Width="100" Height="100" BorderThickness="10 15 20 25" BorderBrush="Purple">
            <Button></Button>
        </Border>
        
        <TextBox x:Name="txtEditor"
                 TextWrapping="Wrap"
                 AcceptsReturn="True">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Cut"/>
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Paste"/>
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>

        <WebBrowser Source="https://yandex.ru"/>

    </DockPanel>
    
    
</Window>
